{% extends 'base.html.twig' %}

{% block body %}
<h1> Contactos </h1>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Telefono</th>
                <th scope="col">Correo</th>
                <th scope="col">Direccion</th>
            </tr>
        </thead>

<tbody>
    {% for contacto in contacto %}

    
    <tr>
    <th scope="row"> {{contacto.id}} </th>
    <td>{{ contacto.nombre }}</td>
    <td>{{ contacto.telefono }}</td>
    <td>{{ contacto.correo }}</td>
    <td>{{ contacto.direccion }}</td>
    <td>
    <a href="/agendakv/web/edit/{{ contacto.id }}"><button name="button"class="btn btn-warning">Editar</button></a>
    <a href="/agendakv/web/delete/{{ contacto.id }}"><button name="button"class="btn btn-outline-danger">Borrar</button></a>
    </td>
    </tr> 
    {% endfor %}
</tbody>

</table>
</div>

<a href="{{ path('create') }}"><button name="button"class="btn btn-outline-primary">Nuevo Contacto</button></a>
{% endblock %}


